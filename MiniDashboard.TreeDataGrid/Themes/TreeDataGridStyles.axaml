<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:MiniDashboard.Avalonia.Converters;assembly=MiniDashboard.Avalonia"
        xmlns:dashboard="clr-namespace:MiniDashboard.Avalonia;assembly=MiniDashboard.Avalonia"
        xmlns:controls="clr-namespace:MiniDashboard.Avalonia.TreeDataGrid"
        x:Class="MiniDashboard.Avalonia.TreeDataGrid.Themes.TreeDataGridStyles">

    <!-- Base theme for TreeDataGrid -->
    <StyleInclude Source="avares://Avalonia.Controls.TreeDataGrid/Themes/Fluent.axaml" />

    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://MiniDashboard.Avalonia.TreeDataGrid/Themes/Colors.axaml" />
                <ResourceInclude Source="avares://MiniDashboard.Avalonia.TreeDataGrid/Themes/Controls/TreeDataGridTile.axaml" />
                <ResourceInclude Source="avares://MiniDashboard.Avalonia.TreeDataGrid/Themes/Controls/CsvGridTile.axaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:InverseBooleanConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </Styles.Resources>

    <!-- Tiles bind CornerRadius to DashboardPanel.TileCornerRadius -->
    <Style Selector="dashboard|DashboardPanel > controls|CsvGridTile">
        <Setter Property="CornerRadius"
                Value="{Binding TileCornerRadius, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderBrush"
                Value="{Binding TileBorderBrush, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderThickness"
                Value="{Binding TileBorderThickness, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
    </Style>
    <Style Selector="dashboard|DashboardPanel > controls|TreeDataGridTile">
        <Setter Property="CornerRadius"
                Value="{Binding TileCornerRadius, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderBrush"
                Value="{Binding TileBorderBrush, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderThickness"
                Value="{Binding TileBorderThickness, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
    </Style>

</Styles>
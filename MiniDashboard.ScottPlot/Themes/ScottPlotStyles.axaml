<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:MiniDashboard.Avalonia.Converters;assembly=MiniDashboard.Avalonia"
        xmlns:dashboard="clr-namespace:MiniDashboard.Avalonia;assembly=MiniDashboard.Avalonia"
        xmlns:cartesian="clr-namespace:MiniDashboard.Avalonia.ScottPlot.Cartesian"
        xmlns:pie="clr-namespace:MiniDashboard.Avalonia.ScottPlot.Pie"
        xmlns:controls="clr-namespace:MiniDashboard.Avalonia.ScottPlot"
        x:Class="MiniDashboard.Avalonia.ScottPlot.Themes.ScottPlotStyles">

    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://MiniDashboard.Avalonia.ScottPlot/Themes/Colors.axaml" />
                <ResourceInclude Source="avares://MiniDashboard.Avalonia.ScottPlot/Themes/Controls/PlotTile.axaml" />

                <ResourceInclude Source="avares://MiniDashboard.Avalonia.ScottPlot/Themes/Controls/CartesianPlotTile.axaml" />
                <ResourceInclude Source="avares://MiniDashboard.Avalonia.ScottPlot/Themes/Controls/BarsPlotTile.axaml" />
                <ResourceInclude Source="avares://MiniDashboard.Avalonia.ScottPlot/Themes/Controls/FinancialPlotTile.axaml" />
                <ResourceInclude Source="avares://MiniDashboard.Avalonia.ScottPlot/Themes/Controls/HistogramPlotTile.axaml" />
                <ResourceInclude Source="avares://MiniDashboard.Avalonia.ScottPlot/Themes/Controls/ScatterPlotTile.axaml" />
                <ResourceInclude Source="avares://MiniDashboard.Avalonia.ScottPlot/Themes/Controls/SignalPlotTile.axaml" />

                <ResourceInclude Source="avares://MiniDashboard.Avalonia.ScottPlot/Themes/Controls/PiePlotTile.axaml" />
                <ResourceInclude Source="avares://MiniDashboard.Avalonia.ScottPlot/Themes/Controls/PieChartPlotTile.axaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:InverseBooleanConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </Styles.Resources>

    <!-- Tiles bind Tile properties to global DashboardPanel properties -->
    <Style Selector="dashboard|DashboardPanel > cartesian|BarsPlotTile">
        <Setter Property="CornerRadius"
                Value="{Binding TileCornerRadius, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderBrush"
                Value="{Binding TileBorderBrush, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderThickness"
                Value="{Binding TileBorderThickness, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
    </Style>
    <Style Selector="dashboard|DashboardPanel > cartesian|CartesianPlotTile">
        <Setter Property="CornerRadius"
                Value="{Binding TileCornerRadius, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderBrush"
                Value="{Binding TileBorderBrush, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderThickness"
                Value="{Binding TileBorderThickness, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
    </Style>
    <Style Selector="dashboard|DashboardPanel > cartesian|FinancialPlotTile">
        <Setter Property="CornerRadius"
                Value="{Binding TileCornerRadius, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderBrush"
                Value="{Binding TileBorderBrush, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderThickness"
                Value="{Binding TileBorderThickness, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
    </Style>
    <Style Selector="dashboard|DashboardPanel > cartesian|HistogramPlotTile">
        <Setter Property="CornerRadius"
                Value="{Binding TileCornerRadius, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderBrush"
                Value="{Binding TileBorderBrush, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderThickness"
                Value="{Binding TileBorderThickness, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
    </Style>
    <Style Selector="dashboard|DashboardPanel > pie|PieChartPlotTile">
        <Setter Property="CornerRadius"
                Value="{Binding TileCornerRadius, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderBrush"
                Value="{Binding TileBorderBrush, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderThickness"
                Value="{Binding TileBorderThickness, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
    </Style>
    <Style Selector="dashboard|DashboardPanel > pie|PiePlotTile">
        <Setter Property="CornerRadius"
                Value="{Binding TileCornerRadius, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderBrush"
                Value="{Binding TileBorderBrush, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderThickness"
                Value="{Binding TileBorderThickness, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
    </Style>
    <Style Selector="dashboard|DashboardPanel > controls|PlotTile">
        <Setter Property="CornerRadius"
                Value="{Binding TileCornerRadius, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderBrush"
                Value="{Binding TileBorderBrush, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderThickness"
                Value="{Binding TileBorderThickness, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
    </Style>
    <Style Selector="dashboard|DashboardPanel > cartesian|ScatterPlotTile">
        <Setter Property="CornerRadius"
                Value="{Binding TileCornerRadius, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderBrush"
                Value="{Binding TileBorderBrush, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderThickness"
                Value="{Binding TileBorderThickness, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
    </Style>
    <Style Selector="dashboard|DashboardPanel > cartesian|SignalPlotTile">
        <Setter Property="CornerRadius"
                Value="{Binding TileCornerRadius, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderBrush"
                Value="{Binding TileBorderBrush, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
        <Setter Property="BorderThickness"
                Value="{Binding TileBorderThickness, RelativeSource={RelativeSource AncestorType=dashboard:DashboardPanel}}" />
    </Style>

</Styles>